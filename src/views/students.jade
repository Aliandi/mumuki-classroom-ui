mixin follow
  h4(ng-class='{                                  \
      "text-primary": followClass(item.social_id),\
      "text-danger": !followClass(item.social_id) \
    }')
    i.pointer.fa.pull-right(
        ng-click='followAction(item.social_id)',
        ng-class='{                                   \
          "fa-eye": followClass(item.social_id),      \
          "fa-eye-slash": !followClass(item.social_id)\
        }')

.container

  .input-group
    i.input-group-addon.fa.fa-search
    input.form-control(id='filter', placeholder='{{ "filter_students" | translate }}', ng-model='listSearch')

  br

  .row
    .col-sm-12(ng-repeat='item in list | orderBy:sortCriteria | filter:listSearch')
      .row.guide-progress-blog
        .col-sm-4.col-xs-10
          img.rounded-x(ng-src='{{ item.image_url }}')
          .name-location
            strong {{ item.fullName() }}
          .name-location
            small(ng-if='!item.email') {{ 'email_not_provided' | translate }}
            small(ng-if='item.email')
              a(href='mailto:{{ item.email }}') {{ item.email }}
        .col-xs-2.visible-xs
          +follow
        .col-sm-7.col-xs-12.student-progress-bar
          .progress
            .progress-bar.progress-bar-success(style='width: {{stats(item,"passed")}}%')
              span(ng-if='item.stats.passed') {{ item.stats.passed }}
            .progress-bar.progress-bar-warning(style='width: {{stats(item,"passed_with_warnings")}}%')
              span(ng-if='item.stats.passed_with_warnings') {{ item.stats.passed_with_warnings }}
            .progress-bar.progress-bar-danger(style='width: {{stats(item,"failed")}}%')
              span(ng-if='item.stats.failed') {{ item.stats.failed }}
        .col-sm-1.hidden-xs
          +follow
