.container
  br
  div.list-group.notifications-list
    button.list-group-item(ng-repeat='notification in notifications.notifications')
      .notification-item(href='', ng-click='Notification.goToAssignment(notification)')
        .notification-image
          img.img-circle.profile.adjust-position(with-default='{{ notification.assignment.student.image_url }}')
        .notification-body
          .notification-text(ng-bind-html='"message" | translate:notification | trustHtml')
          .notification-hour
            small
              i.fa.fa-fw.fa-comment-o
              span {{ notification.created_at | humanizeDate }}
    label(ng-if='Notification.count() === 0')
      | {{ 'no_notifications_to_show' | translate }}

  ul.pagination
    li
      a(ui-sref='classroom.notifications({page: 1})')
        span(aria-hidden='true') «
    li
      a(ui-sref='classroom.notifications({page: prevPage()})')
        span(aria-hidden='true') &lt;

    li(ng-repeat='page in pages() | limitTo:5:offset()', ng-class='{ active: notifications.page === page }')
      a(ui-sref='classroom.notifications({page: page})')
        span {{ pad(page) }}

    li
      a(ui-sref='classroom.notifications({page: nextPage()})')
        span(aria-hidden='true') &gt;
    li
      a(ui-sref='classroom.notifications({page: totalPages()})')
        span(aria-hidden='true') »
