.container

  h3 {{ 'new_exam' | translate }}

  form(ng-submit='create()')

    .row

      .col-sm-12
        .form-group
          .input-group.date
            input.form-control(
                type='text',
                ng-model='asyncSelected',
                placeholder='{{ filter_available_guides | translate }}',
                uib-typeahead='guide as fullName(guide) for guide in getGuides($viewValue)',
                typeahead-loading='loadingGuides')
            span.input-group-addon
              i.fa.fa-search(ng-hide='loadingGuides')
              i.glyphicon.glyphicon-refresh(ng-show='loadingGuides')

      .col-sm-6
        .dropdown.form-group
          #start_time_id.dropdown-toggle.input-group.date.start_time_class(
              role='button',
              data-toggle='dropdown',
              data-target='#')
            input.form-control(type='text', data-ng-model='exam.start_time')
            span.input-group-addon
              i.fa.fa-calendar
          ul.dropdown-menu(role='menu', aria-labelledby='start_time_id')
            datetimepicker(
                data-ng-model='exam.start_time',
                data-datetimepicker-config='{ dropdownSelector: ".start_time_class" }')

      .col-sm-6
        .dropdown.form-group
          #end_time_id.dropdown-toggle.input-group.date.end_time_class(
              role='button',
              data-toggle='dropdown',
              data-target='#')
            input.form-control(type='text', data-ng-model='exam.end_time')
            span.input-group-addon
              i.fa.fa-calendar
          ul.dropdown-menu(role='menu', aria-labelledby='end_time_id')
            datetimepicker(
                data-ng-model='exam.end_time',
                data-datetimepicker-config='{ dropdownSelector: ".end_time_class" }')

    button.btn.btn-primary.pull-right(ng-if='isAdmin()', ng-disabled='!isValid()')
      | {{ 'new_exam' | translate }}

