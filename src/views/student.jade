.container
  input(bs-switch, ng-model='isMultiple', type='checkbox', switch-on-text="{{ 'bulk' | translate }}", switch-off-text="{{ 'single' | translate }}", switch-size='mini')
  .single-student(ng-if='!isMultiple')
    h3 {{ 'new_student' | translate }}
    fieldset.form-group
      input.form-control(ng-model='student.first_name', type='text', placeholder='Nombre', autofocus)
    fieldset.form-group
      input.form-control(ng-model='student.last_name', type='text', placeholder='Apellido')
    fieldset.form-group
      input.form-control.lower(ng-model='student.email', type='text', placeholder='example@mumuki.org')
    .row
      button.btn.btn-success.modal-form-input.pull-right(ng-click='addStudent()') {{ 'confirm' | translate }}
  .multiple-student(ng-if='isMultiple')
    h3 {{ 'add_multiple_students' | translate }}
    ng-csv-import.import(content='csv.content', callback='applyCsv', header='csv.header', header-visible='csv.headerVisible', separator='csv.separator', result='csv.result', upload-button-label='csv.uploadButtonLabel')
      i.fa.fa-upload
      span {{ 'upload_file' | translate }}
    table.table(ng-if='csv.result')
      tr
        th {{ 'email' | translate }}
        th {{ 'first_name' | translate}}
        th {{ 'last_name' | translate}}
      tr(ng-repeat='student in csv.result')
        td
          input.form-control(ng-model='student.first_name', type='text', placeholder='Nombre', autofocus)
        td
          input.form-control(ng-model='student.last_name', type='text', placeholder='Apellido')
        td
          input.form-control(ng-model='student.email', type='text', placeholder='example@mumuki.org')
    .row(ng-if='csv.result')
      button.btn.btn-success.modal-form-input.pull-right(ng-click='addStudents()') {{ 'confirm' | translate }}
