.container

  .input-group
    i.input-group-addon.fa.fa-search
    input.form-control(id='filter', placeholder='{{ inputPlaceholder | translate }}', ng-model='listSearch')

  br

  div.list-group
    .list-group-item(ng-repeat='item in list | orderBy: sortCriteria() | filter:listSearch')
      .item.pull-left(ng-click='open(item)')
        i(class='{{ item.iconClass() }}')
        span.divider-vertical
        span.item-name {{ item.getName() | uppercase }}
      .pull-right(ng-if='isCourse && isAdmin()')
        span.divider-vertical
        i.settings-icon(class='{{ item.iconSetting() }}', ng-click='openPermissionsModal(item.slug)')
    label(ng-if='!(list | orderBy: sortCriteria() | filter:listSearch).length')
      | {{ noItemsToShow | translate }}
  button.btn.btn-primary.pull-right(ng-if='isAdmin()', ui-sref='classroom.courses.new')
    | {{ 'new_course' | translate }}
